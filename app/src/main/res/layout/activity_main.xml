<?xml version="1.0" encoding="utf-8"?>
<com.rg.eb.EasyRefreshBox xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaee90"
    android:id="@+id/easyRefreshBox"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_refreshState"
        android:layout_width="match_parent"
        android:text="刷新状态"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/v_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeee90"
        />
</com.rg.eb.EasyRefreshBox>