<?xml version="1.0" encoding="utf-8"?>
<com.rg.eb.nested.NestedEasyRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaee90"
    android:orientation="vertical"
    android:id="@+id/aer_easy_refresh_layout"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/aer_fl_top"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="未开始"
        android:elevation="-2dp"
        android:background="#ae8080"
        android:layout_height="100dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aer_rv"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeee90"
        />
    <FrameLayout
        android:id="@+id/aer_fl_bottom"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="HEAD2"
        android:elevation="-2dp"
        android:background="#ce0808"
        android:layout_height="100dp"/>
</com.rg.eb.nested.NestedEasyRefreshLayout>